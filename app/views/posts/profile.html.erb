<h2><%= @user.name %> 's profile</h2>

<p>
  <%= @user.about %>
</p>

<h3>發文紀錄</h3>
<table class="table table-striped table-hover">
  <tr class="info">
    <th>Title</th>
    <th>Content</th>
    <th>Time</th>
  </tr>
  <% @user.posts.each do |z| %>
    <tr>
      <td>
        <%= link_to z.title, post_path(z) %>
      </td>
      <td><%= z.content %></td>
      <td><%= z.created_at %></td> 
    </tr>
  <% end %>
</table>

<h3>留言紀錄</h3>

<table class="table table-striped table-hover">
  <tr class="info">
    <th>Post</th>
    <th>Title</th>
    <th>Content</th>
    <th>Time</th>
  </tr>
  <% @user.comments.each do |y| %>
    <tr>
      <td><%= link_to y.post.title, post_path(y.post) %></td>
      <td><%= y.title %></td>
      <td><%= y.content %></td>
      <td><%= y.created_at %></td> 
    </tr>
  <% end %>
</table>
