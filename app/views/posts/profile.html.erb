<h2><%= @user.name %> 's profile</h2>

<p>
  <%= @user.about %>
</p>

<div class="row">
  <div class="col-md-12">
    <h3>Favorites</h3>
    <table class="table table-striped table-hover">
      <tr class="danger">
        <th>Post</th>
        <th>Content</th>
        <th>Time</th>
      </tr>
      <% @user.favorites.each do |f| %>
        <tr>
          <td><%= link_to f.post.title, post_path(f.post) %></td>
          <td><%= f.post.content %></td>
          <td><%= f.created_at %></td> 
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Post log</h3>
    <table class="table table-striped table-hover">
      <tr class="success">
        <th>Title</th>
        <th>Content</th>
        <th>Time</th>
      </tr>
      <% @user.posts.each do |z| %>
        <tr>
          <td>
            <%= link_to z.title, post_path(z) %>
          </td>
          <td><%= z.content %></td>
          <td><%= z.created_at %></td> 
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-6">
    <h3>Comment log</h3>
    <table class="table table-striped table-hover">
      <tr class="info">
        <th>Post</th>
        <th>Title</th>
        <th>Content</th>
        <th>Time</th>
      </tr>
      <% @user.comments.each do |y| %>
        <tr>
          <td><%= link_to y.post.title, post_path(y.post) %></td>
          <td><%= y.title %></td>
          <td><%= y.content %></td>
          <td><%= y.created_at %></td> 
        </tr>
      <% end %>
    </table>
  </div>
</div>




