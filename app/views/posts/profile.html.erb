<h2>
<% if @user.image? %>
  <%= image_tag(@user.image) %> 
<% end %>
<%= @user.name %> 's profile
</h2>

<p>
  <%= @user.about %>
</p>

<!-- Show draft box & favorite, when owner login -->
<% if current_user %>
  <% if current_user.id == @user.id %>
    <div class="row">
      <div class="col-md-4">
        <h3>Favorites</h3>
        <table class="table table-striped table-hover">
          <tr class="danger">
            <th>Post</th>
            <th>Content</th>
            <th>Time</th>
            <th></th>
          </tr>
          <% if @user.favorites.size == 0 %>
            <tr>
              <td>
                <i>No favorites post yet!</i>
              </td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          <% else %>
            <% @user.favorites.each do |f| %>
              <tr>
                <td><%= link_to f.post.title, post_path(f.post) %></td>
                <td><%= f.post.content %></td>
                <td><%= f.created_at %></td> 
                <td>
                  <%= link_to "Delete", favorite_path(f.post.id), :class => "btn btn-danger btn-xs" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>
      <div class="col-md-4">
        <h3>Post draft box</h3>
        <table class="table table-striped table-hover">
          <tr class="success">
            <th>Category</th>
            <th>Title</th>
            <th>Content</th>
            <th></th>
          </tr>
            <% if @user.posts.where(status:2).size == 0 %>
              <td>
                <i>No draft post yet!</i>
              </td>
              <td></td>
              <td></td>
              <td></td>
            <% else %>
              <% @user.posts.where(status:2).map do |x| %>
                <tr>
                  <td>
                    <%= x.category.name %>
                  </td>
                  <td>
                    <%= link_to x.title, edit_post_path(x.id) %>
                  </td>
                  <td>
                    <%= x.content %>
                  </td>
                  <td>
                    <%= link_to "Edit", edit_post_path(x.id), :class => "btn btn-primary btn-xs" %>
                  </td>
                </tr>
              <% end %>
            <% end %>
        </table>
      </div>
      <div class="col-md-4">
        <h3>Comment draft box</h3>
        <table class="table table-striped table-hover">
          <tr class="warning">
            <th>Category</th>
            <th>Title</th>
            <th>Content</th>
            <th></th>
          </tr>
            <% if @user.comments.where(status:2).size == 0 %>
              <td>
                <i>No draft comment yet!</i>
              </td>
              <td></td>
              <td></td>
              <td></td>
            <% else %>
              <% @user.comments.where(status:2).map do |x| %>
                <tr>
                  <td>
                    <%= x.post.category.name %>
                  </td>
                  <td>
                    <%= link_to x.title, edit_post_comment_path(x.post.id, x.id) %>
                  </td>
                  <td>
                    <%= x.content %>
                  </td>
                  <td>
                    <%= link_to "Edit", edit_post_comment_path(x.post.id, x.id), :class => "btn btn-primary btn-xs" %>
                  </td>
                </tr>
              <% end %>
            <% end %>
        </table>
      </div>
    </div>
  <% end %>
<% end %>

<!-- Show post & comment log -->
<div class="row">
  <div class="col-md-6">
    <h3>Post log</h3>
    <table class="table table-striped table-hover">
      <tr class="info">
        <th>Title</th>
        <th>Content</th>
        <th>Time</th>
      </tr>
      <% if @user.posts.where(status:1).size == 0 %>
        <tr>
          <td><i><%= @user.name %> don't have any post!</i></td>
          <td></td>
          <td></td>
        </tr>
      <% else %>
        <% @user.posts.where(status:1).each do |z| %>
          <tr>
            <td><%= link_to z.title, post_path(z) %></td>
            <td><%= z.content %></td>
            <td><%= z.created_at %></td> 
          </tr>
        <% end %>
      <% end %> 
    </table>
  </div>
  <div class="col-md-6">
    <h3>Comment log</h3>
    <table class="table table-striped table-hover">
      <tr class="info">
        <th>Post</th>
        <th>Title</th>
        <th>Content</th>
        <th>Time</th>
      </tr>
      <% if @user.comments.where(status:1).size == 0 %>
        <tr>
          <td>
            <i><%= @user.name %> don't have any comment!</i>  
          </td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% else %>
        <% @user.comments.where(status:1).each do |y| %>
          <tr>
          <td><%= link_to y.post.title, post_path(y.post) %></td>
          <td><%= y.title %></td>
          <td><%= y.content %></td>
          <td><%= y.created_at %></td> 
          </tr>
        <% end %>
      <% end %> 
    </table>
  </div>
</div>




