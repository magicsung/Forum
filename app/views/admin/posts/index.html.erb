<h2>ADMIN</h2>

<%# raise %>

<div class="row">
  <!-- Users List -->
  <div class="col-md-6">
    <h3>User List</h3>
    <table class="table table-striped table-hover">
      <tr class="info">
        <th>ID</th>
        <th>Role</th>
        <th>User name</th>
        <th>Email</th>
        <th></th>
      </tr>
      <% @users.each do |x| %>
        <tr>
          <td><%= x.id %></td>
          <td>
          <!-- Show role -->
            <% if x.role == 1 %>
              <%= Admin %>
              <% else %>
              <%= User %>
            <% end %>
          <!-- Show role -->
          </td>
          <td>
            <!-- Link to user's profile -->
            <%= link_to profile_path(x.id) do %>
              <%= x.name %>
            <% end %>
          </td>
          <td><%= x.email %></td>
          <td>
            <%= link_to 'Edit', edit_admin_user_path(x), :class => "btn btn-warning btn-xs" %>
            <%= link_to 'Delete', admin_user_path(x),:method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-danger btn-xs" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <!-- Category List -->
  <div class="col-md-6">
    <h3>Category List</h3>
    <table class="table table-striped table-hover">
      <tr class="danger">
        <th>ID</th>
        <th>name</td>
        <th>Posts count</th>
        <th></th>
      </tr>
      <% Category.all.each do |z| %>
      <tr>
        <td><%= z.id %></td>
        <td>
<!-- rename category -->
      <%= form_for z, :url => admin_category_path(z) do |n|  %>
          <%= n.text_field :name, :value => z.name %>
        </td>
        <td><%= z.posts.count %></td>
        <td>
          <%= n.submit 'Rename', :class => "btn btn-warning btn-xs" %>
      <% end %>
<!-- rename category -->
          <%= link_to 'Delete', admin_category_path(z),:method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-danger btn-xs" %>
        </td>
      </tr>
      <% end %>
    </table>
    <!-- New category -->
    <table class="table">
  <%= form_for @category, :url => admin_category_index_path do |n|  %>
      <tr>
        <td>
            <%= n.text_field :name %>
          <%= n.submit 'New', :class => "btn btn-success btn-xs" %>
        </td>
        <td></td>
      </tr>
  <% end %>
    </table>
  </div>
</div>





