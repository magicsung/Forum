<h2>admin edit user</h2>

<%= form_for @user, url: admin_user_path(@user) do |f| %>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, :class => "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :about %><br />
    <%= f.text_area :about, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :role %><br />
    <!-- status at models/user.rb -->
    <%= f.select :role, User::ROLE %>
  </div>  

  <%= f.submit "Update", :class => "btn btn-primary" %>
  <%= link_to "Cancel", admin_posts_path, :class => "btn btn-info" %>

<% end %>
